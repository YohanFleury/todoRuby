<h1>La liste de mes todos </h1>
<% @todos.each do |todo| %>
<h4> <%= todo.title %> </h4>
<p> <%= todo.description %> </p>
<p> Date limite : <%= todo.date%> </p>
<p>
    <a href="<%= todo_path(todo.id) %>" class="btn btn-primary"> Voir la suite </a>
    <a href="<%= edit_todo_path(todo.id) %>" class="btn btn-light"> Editer </a>
    <a href="<%= todo_path(todo.id) %>" class="btn btn-danger" data-confirm="Etes vous sûr ?" data-method="DELETE"> Supprimer </a>

</p>
<% end %>
<p class="mt-5">
    <a href="<%= new_todo_path %>" class="btn btn-warning"> Créer une todo </a>
</p>

<% if !current_user %>
<h1> Bienvenue ! Sur ce site tu peux créer des todos listes !</h1>
<a href="<%= login_path %>" class="btn btn-info"> Se connecter </a>
<a href="<%= new_user_path %>" class="btn btn-info"> Créer un compte </a>

<% else %>
<h1>Hello <%= current_user.email%> </h1>

<h2>La liste de mes todos </h2>
<% @todos.each do |todo| %>
    <div class="card m-3" style="width: 18rem;">
    <div class="card-body">
        <h4 class="card-title"><%= todo.title %></h4>
        <p class="card-text"><%= todo.description %></p>
        <p class="card-text"> Date limite : <%= todo.date %></p>
        <a href="<%= todo_path(todo.id) %>" class="card-link"> Voir la suite </a>
        <a href="<%= edit_todo_path(todo.id) %>" class="card-link"> Editer </a>
        <a href="<%= todo_path(todo.id) %>" class="btn btn-outline-danger mt-5" data-confirm="Etes vous sûr ?" data-method="DELETE"> Supprimer </a>
    </div>
    </div>
<% end %>
<p class="mt-5">
    <a href="<%= new_todo_path %>" class="btn btn-warning"> Créer une todo </a>
</p>
<%end%>
<h1> Créer une todo  </h1>

<%= form_for @todo do |f| %>
    <div class='form-group'>
        <label> Titre de la todo </label>
        <%= f.text_field :title, class: 'form-control' %>
        <label> Descritpion de la todo </label>
        <%= f.text_area :description, class: "form-control" %>
        <label> Date limite pour faire la todo </label>
        <%= f.date_select(:date, :order => [:month, :day, :year]) %>
        <div class="form-group"> 
            <button type="submit" class="btn btn-primary mt-3"> Créer la todo </button>
        </div>
    </div>
<% end %>